package project1;

/**
 *
 * @author mtsch
 */
import java.util.*;
import java.io.FileNotFoundException;
import java.io.File;
import java.io.*;

public class Main {

    public static void main(String[] args) {
        Main mainObject = new Main();
        mainObject.run();
    }

    private void run() {
        //declare ArrayList and initialize (final product)
        ArrayList<Integer> list = new ArrayList<>();
        //and int which will be the total of all runs

        ArrayList<Integer> listRunsCount = new ArrayList<>();

        try {
            ArrayList<Integer> fileRead = read("p01-in.txt");
            ArrayList<Integer> listRunsUpCount = runCount(fileRead, 1);
            ArrayList<Integer> listRunsDnCount = runCount(fileRead, 0);
            ArrayList<Integer> mergeList = merge(listRunsUpCount, listRunsDnCount);
            int total = sum(mergeList);
            writeFile(total, mergeList);

        } catch (FileNotFoundException ex) {
            System.out.println("Test!");
            System.exit(-1);

        }
    }

    private ArrayList<Integer> read(String file) throws FileNotFoundException {
        ArrayList<Integer> array = new ArrayList<>();
        File in = new File(file);
        Scanner scan = new Scanner(in);
        while (scan.hasNext()) {
            array.add(scan.nextInt());
        }
        scan.close();
        return array;
    }

    private ArrayList<Integer> runCount(ArrayList<Integer> list, int direction) {
        ArrayList<Integer> count = new ArrayList<>();
        for (int i = 0; i < list.size(); i++) {
            count.add(0);
        }
        if (direction == 1) {
            int k = 0;

            for (int i = 0; i < list.size(); i++) {
                while (i < list.size() - 1 && list.get(i) <= list.get(i + 1)) {
                    i++;
                    k++;
                }

                if (k != 0) {
                    count.set(k, count.get(k) + 1);
                    k = 0;
                }
            }
        } else {
            int k = 0;
            for (int i = 0; i < list.size(); i++) {
                while (i < list.size() - 1 && list.get(i) >= list.get(i + 1)) {
                    i++;
                    k++;
                }

                if (k != 0) {
                    count.set(k, count.get(k) + 1);
                    k = 0;
                }
            }
        }

        return count;
    }

    private ArrayList<Integer> merge(ArrayList<Integer> listRunsUpCount, ArrayList<Integer> listRunsDnCount) {
        int temp;
        ArrayList<Integer> mergeList = new ArrayList<Integer>();
        for (int i = 0; i < listRunsUpCount.size(); i++) {
            temp = listRunsUpCount.get(i) + listRunsDnCount.get(i);
            mergeList.add(temp);
        }
        return mergeList;
    }

    private void writeFile(int sum, ArrayList<Integer> list) throws FileNotFoundException {

        PrintWriter out = new PrintWriter("p01-runs.txt");
        out.println("runs_total, " + sum);
        for (int i = 1; i < list.size(); i++) {
            out.println("runs_" + i + " " + list.get(i));
        }
        out.close();
    }//end writeFile

    private int sum(ArrayList<Integer> list) {
        int sum = 0;
        for (Integer x : list) {
            sum += x;
        }
        return sum;
    }//end sum method
}
